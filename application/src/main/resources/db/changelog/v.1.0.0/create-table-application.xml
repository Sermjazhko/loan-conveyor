<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-application" author="test">
        <createTable tableName="application">
            <column name="application_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="bigint">
                <constraints foreignKeyName="client_id" references="client(client_id)"/>
            </column>
            <column name="credit_id" type="bigint">
                <constraints foreignKeyName="fk_application_client" references="credit(credit_id)"/>
            </column>
            <column name="status" type="varchar"/>
            <column name="creation_date" type="timestamp"/>
            <column name="applied_offer" type="jsonb"/>
            <column name="sign_date" type="timestamp"/>
            <column name="ses_code" type="varchar"/>
            <column name="status_history" type="jsonb"/>
        </createTable>
    </changeSet>

</databaseChangeLog>